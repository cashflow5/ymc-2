	<!-- 构建定义 -->
	<build>
		<!-- 插件 -->
		<pluginManagement>
			<plugins>
				<!-- war插件 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.2</version>
					<configuration>
						<failOnMissingWebXml>true</failOnMissingWebXml>
						<packagingExcludes>
							**/application.properties,
							**/commodity.pics.scale.pl,
							**/commodity.pics.settings.xml,
							**/commodity.preview.settings.xml
						</packagingExcludes>
						<webResources>
							<resource>
								<directory>${project.basedir}/src/main/webapp</directory>
								<filtering>true</filtering>
								<includes>
									<include>**/jboss-web.xml</include>
								</includes>
							</resource>
						</webResources>
					</configuration>
				</plugin>
				<!-- clean插件 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-clean-plugin</artifactId>
					<configuration>
						<filesets>
							<fileset>
								<directory>${basedir}</directory>
								<includes>
									<include>**/*.log</include>
								</includes>
							</fileset>
						</filesets>
					</configuration>
				</plugin>
				<!-- tests插件 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
				<!-- more source directories插件 -->
